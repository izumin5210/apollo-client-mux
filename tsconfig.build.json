{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": ["./tsconfig.json"],
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "declarationMap": true,
    "emitDeclarationOnly": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/test/**/*.ts", "src/**/*.test.ts"]
}
